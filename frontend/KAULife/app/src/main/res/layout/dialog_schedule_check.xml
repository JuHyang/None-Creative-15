<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewSubjectCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewGradeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewCategoryCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewCreditCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewProfessorCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewMajorCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewTimeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewRoomCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textViewTargetCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            />

        </LinearLayout>

</android.support.constraint.ConstraintLayout>